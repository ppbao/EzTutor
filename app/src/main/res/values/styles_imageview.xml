<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ImageViewBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="UserPhotoView" parent="ImageViewBase">
        <item name="android:layout_width">@dimen/photo_user</item>
        <item name="android:layout_height">@dimen/photo_user</item>
        <item name="android:src">@drawable/user_character</item>
    </style>

    <style name="UserPhotoView.Drawer" parent="UserPhotoView">
        <item name="android:layout_width">@dimen/photo_drawer</item>
        <item name="android:layout_height">@dimen/photo_drawer</item>
    </style>

</resources>